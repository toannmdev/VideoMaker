<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="80dp"
    android:layout_height="100dp">
    <RelativeLayout
        android:id="@+id/layout_item_merge"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/iv_thumb_image_merge"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_marker_image_merge"
            android:layout_width="match_parent"
            android:background="#66171B1D"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_status_image_marge"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_pause"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_duration_merge"
        android:gravity="center"
        android:textSize="14sp"
        android:text="sdasdas"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>