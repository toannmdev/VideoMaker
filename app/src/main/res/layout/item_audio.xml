<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_item_audio_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/ll_item_audio_play"
        android:layout_width="50dp"
        android:gravity="center"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_item_audio_play"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_audio_play"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_item_audio_select"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/ll_item_audio_play"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_item_audio_title"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/ll_item_audio_marge"
            android:gravity="center|left"
            android:text="name"
            android:textColor="@color/trgb_262626"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_item_audio_marge"
            android:layout_width="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_item_audio_marge"
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_marge"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/iv_item_audio_duration"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:textColor="@color/accent"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>